image: nikkoura/restic:{{#if build.tag}}{{trimPrefix build.tag "v"}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  -
    image: nikkoura/restic:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: nikkoura/restic:{{#if build.tag}}{{trimPrefix build.tag "v"}}-{{/if}}arm
    platform:
      architecture: arm
      os: linux
